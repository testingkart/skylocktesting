<!DOCTYPE HTML PUBLIC "-//W3C//DTD HTML 4.01 Transitional//EN" "http://www.w3.org/TR/html4/loose.dtd">
<html lang="{{ locale }}" class="{{ checkout_html_classes }}">
  <head>
    <script src="//cdn.optimizely.com/js/1041580530.js"></script>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, height=device-height, minimum-scale=1.0, user-scalable=0">

    <title>{{ shop.name }} - {{ page_title }}</title>

    {{ content_for_header }}

    {{ checkout_stylesheets }}
    <style>
      .alternative-payment-methods__btn img {
        height: auto;
        display: none;
      }
      .alternative-payment-methods__btn.show img {
        display: inline;
      }
    </style>
    
    {{ checkout_scripts }}
    {{ '//ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js' | script_tag }}
    
    <script>     
      $(document).ready(function() {
        var newPaypal = "{{ 'Paypal-Logo-Transparent-png-format-large-size.png' | asset_url }}";       
        $('.alternative-payment-methods__btn.paypal img').attr("src", newPaypal);
        $('.alternative-payment-methods__btn').addClass("show");
      });
    </script>

  </head>
  <body>

    {{ content_for_banner }}
    {{ content_for_layout }}
    {{ content_for_footer }}

    {{ tracking_code }}

  </body>
</html>

